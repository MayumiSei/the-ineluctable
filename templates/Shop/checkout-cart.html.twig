{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('build/css/product.css') }}" rel="stylesheet">
    <link href="{{ asset('build/css/cart.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('build/css/account.css') }}">
{% endblock %}

{%  block body %}
    <!-- breadcrumb -->
    <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
            <a href="{{ path('homepage') }}" class="stext-109 cl8 hov-cl1 trans-04">
                Home
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>

            <span class="stext-109 cl4">
				Shoping Cart
			</span>
        </div>
    </div>

    <!-- Shoping Cart -->
    <form class="bg0 p-t-75 p-b-85">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <div class="wrap-table-shopping-cart">
                            <table class="table-shopping-cart">
                                <tr class="table_head">
                                    <th class="column-1">Product</th>
                                    <th class="column-2"></th>
                                    <th class="column-3">Price</th>
                                    <th class="column-4">Quantity</th>
                                    <th class="column-5">Total</th>
                                </tr>

                                {% for orderProduct in orderProducts %}
                                    <tr class="table_row">
                                        <td class="column-1">
                                            <div class="how-itemcart1">
                                                {% for img in orderProduct.product.gallery.galleryHasMedias %}
                                                    {% if loop.index == 1 %}
                                                        <img src="{% path img.media, 'big' %}" alt="{{ orderProduct.product.title }}">
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                        </td>
                                        <td class="column-2">{{ orderProduct.product.title }}</td>
                                        <td class="column-3">
                                            <span class="product-price">{{ orderProduct.product.price }}</span> $
                                        </td>
                                        <td class="column-4">
                                            <p>{{ orderProduct.quantity }}</p>

                                        </td>
                                        <td class="column-5">
                                            <span class="total-product-price">{{ orderProduct.product.price * orderProduct.quantity }}</span>  $
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <div class="wrap-table-shopping-cart p-20 border-cart">
                            <div class="row">
                                <div class="col-12 col-lg-6 border-right-cart">
                                    <h2>Address Delivery</h2>
                                        {% if user.addressDelivery|length %}
                                            <p>{{ user.addressDelivery.firstName }} {{ user.addressDelivery.lastName }}</p>
                                            <p>{{ user.addressDelivery.street }},
                                                {% if user.addressDelivery.streetAdd|length %}
                                                    {{ user.addressDelivery.streetAdd }},
                                                {% endif %}
                                            </p>
                                            <p>{{ user.addressDelivery.city }},
                                                {{ user.addressDelivery.zipCode }}</p>
                                            <p>{{ user.addressDelivery.state }}</p>
                                            <p>{{ user.addressDelivery.country }}</p>
                                        {% endif %}
                                    <div class="float-right">
                                        <a href="{{ path('fos_user_profile_edit') }}" class="btn-blue">Edit</a>
                                    </div>
                                    {% for message in app.flashes('notice') %}
                                        <div class="flash-notice margin-top-15 color-danger">
                                            {{ message }}
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="col-12 col-lg-6">
                                    <h2>Address Billing</h2>
                                    {% if user.addressBilling|length %}
                                        <p>{{ user.addressBilling.firstName }} {{ user.addressBilling.lastName }}</p>
                                        <p>{{ user.addressBilling.street }},
                                            {% if user.addressBilling.streetAdd|length %}
                                                {{ user.addressBilling.streetAdd }},
                                            {% endif %}
                                        </p>
                                        <p>{{ user.addressBilling.city }},
                                            {{ user.addressBilling.zipCode }}</p>
                                        <p>{{ user.addressBilling.state }}</p>
                                        <p>{{ user.addressBilling.country }}</p>
                                    {% endif %}
                                    <div class="float-right">
                                        <a href="{{ path('fos_user_profile_edit') }}" class="btn-blue">Edit</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                        <h4 class="mtext-109 cl2 p-b-30">
                            Cart Totals
                        </h4>

                        <div class="flex-w flex-t bor12 p-b-13">
                            <div class="size-208">
								<span class="stext-110 cl2">
									Subtotal:
								</span>
                            </div>

                            <div class="size-209">
                                <span class="mtext-110 cl2 sub-total">{{ subTotal }}</span>  $
                            </div>
                        </div>

                        <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                            <div class="size-208 w-full-ssm">
								<span class="stext-110 cl2">
									Shipping:
								</span>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="mtext-110 cl2 ">
                                    <span class="shipping">{{ shipping }}</span> $
                                </p>

                                <!--<div class="p-t-15">
									<span class="stext-112 cl8">
										Calculate Shipping
									</span>

                                    <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                        <select class="js-select2" name="time">
                                            <option>Select a country...</option>
                                            <option>USA</option>
                                            <option>UK</option>
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>

                                    <div class="bor8 bg0 m-b-12">
                                        <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="state" placeholder="State /  country">
                                    </div>

                                    <div class="bor8 bg0 m-b-22">
                                        <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="postcode" placeholder="Postcode / Zip">
                                    </div>

                                    <div class="flex-w">
                                        <div class="flex-c-m stext-101 cl2 size-115 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer">
                                            Update Totals
                                        </div>
                                    </div>

                                </div>-->
                            </div>
                        </div>

                        <div class="flex-w flex-t p-t-27 p-b-33">
                            <div class="size-208">
								<span class="mtext-101 cl2">
									Total:
								</span>
                            </div>

                            <div class="size-209 p-t-1">
                                <span class="mtext-110 cl2 total">{{ subTotal + shipping }}</span>  $
                            </div>
                        </div>

                        {% if orderProducts|length %}
                            <a href="{{ path('cart_payment') }}" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                                Payment
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}