<header class="header-v2">
    <!-- Header desktop -->
    <div class="container-menu-desktop trans-03">
        <div class="wrap-menu-desktop">
            <nav class="limiter-menu-desktop p-l-45">

                <!-- Logo desktop -->
                <a href="{{ path('homepage') }}" class="logo">
                    <img src="{{ asset('images/logo-01.png') }}" alt="IMG-LOGO">
                </a>

                <!-- Menu desktop -->
                <div class="menu-desktop">
                    <ul class="main-menu">
                        <li {% if 'homepage' in route %} class="active-menu" {% endif %}>
                            <a href="{{ path('homepage') }}">Home</a>
                        </li>

                        <li {% if 'products' in route %} class="active-menu" {% endif %}>
                            <a href="{{ path('products') }}">Shop</a>
                            <div class="sub-menu">
                                {% for category in categories %}
                                    <div class="float-left submenu-desktop">
                                        <a href="{{ path('products', {category: category.id}) }}">
                                            <p>{{ category.name }}</p>
                                        </a>
                                        {% if category.types|length %}
                                            <ul>
                                                {% for type in category.types %}
                                                    <li>
                                                        <a href="{{ path('products', {type: type.id}) }}">{{ type.name }}</a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            </div>
                        </li>

                        <li {% if 'blog' in route %} class="active-menu" {% endif %}>
                            <a href="{{ path('blog') }}">Blog</a>
                        </li>

                        <li {% if 'about' in route %} class="active-menu" {% endif %}>
                            <a href="{{ path('about') }}">About</a>
                        </li>

                        {% if is_granted('ROLE_ADMIN') %}
                            <li {% if 'sonata_admin_dashboard' in route %}class="active-menu" {% endif %}>
                                <a href="{{ path('sonata_admin_dashboard') }}">Admin</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>

                <!-- Icon header -->
                <div class="wrap-icon-header flex-w flex-r-m h-full">
                    <div class="flex-c-m h-full p-r-24">
                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-modal-search">
                            <i class="zmdi zmdi-search"></i>
                        </div>
                    </div>

                    <div class="flex-c-m h-full p-l-18 p-r-25 bor5">
                        <a href="{{ path('cart') }}">
                            {% if app.session.get('cart_items_number')|length > 0 %}
                            <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 icon-header-noti js-show-cart" data-notify="{{app.session.get('cart_items_number')}}">
                                {% else %}
                                <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 icon-header-noti js-show-cart" data-notify="0">
                                    {% endif %}
                                    <i class="zmdi zmdi-shopping-cart"></i>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="flex-c-m h-full p-lr-19">
                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11">
                            <a href="{{ path('fos_user_profile_show') }}">
                                <i class="zmdi zmdi-account icon-account"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo moblie -->
        <div class="logo-mobile">
            <a href="{{ path('homepage') }}"><img src="{{ asset('images/logo.jpg') }}" alt="IMG-LOGO"></a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m h-full m-r-15">
            <div class="flex-c-m h-full p-r-10">
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-modal-search">
                    <i class="zmdi zmdi-search"></i>
                </div>
            </div>

            <div class="flex-c-m h-full p-lr-10 bor5">
                {% if app.session.get('cart_items_number')|length > 0 %}
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 icon-header-noti js-show-cart" data-notify="{{app.session.get('cart_items_number')}}">
                    {% else %}
                    <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 icon-header-noti js-show-cart" data-notify="0">
                        {% endif %}
                    <i class="zmdi zmdi-shopping-cart"></i>
                </div>
            </div>
        </div>

        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
        </div>
    </div>


    <!-- Menu Mobile -->
    <div class="menu-mobile">
        <ul class="main-menu-m">
            <li>
                <a href="{{ path('homepage')}}">Home</a>
            </li>

            <li>
                <a href="{{ path('products') }}">Shop</a>
                <div class="submenu-mobile">
                    {% for category in categories %}
                        <div>
                            <div class="h-40">
                                <a href="{{ path('products', {category: category.id}) }}">
                                    <span>{{ category.name }}</span>
                                </a>
                            </div>
                            {% if category.types|length %}
                                <ul>
                                    {% for type in category.types %}
                                        <li>
                                            <a href="{{ path('products', {type: type.id}) }}">{{ type.name }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </li>

            <li>
                <a href="{{ path('blog') }}">Blog</a>
            </li>

            <li>
                <a href="{{ path('about') }}">About</a>
            </li>

            {% if is_granted('ROLE_ADMIN') %}
                <li>
                    <a href="{{ path('sonata_admin_dashboard') }}">Admin</a>
                </li>
            {% endif %}
        </ul>
    </div>

    <!-- Modal Search -->
    <div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
        <div class="container-search-header">
            <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
                <img src="{{ asset('images/icons/icon-close2.png') }}" alt="CLOSE">
            </button>

            <form class="wrap-search-header flex-w p-l-15" action="{{ path('search') }}" method="post">
                <button class="flex-c-m trans-04">
                    <i class="zmdi zmdi-search"></i>
                </button>
                <input class="plh3" type="text" name="search" placeholder="Search...">
            </form>
        </div>
    </div>
</header>
