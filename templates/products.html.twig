{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('build/css/product.css') }}" rel="stylesheet">
{% endblock %}

{%  block body %}
    <!-- Title page -->
    <section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url({{ asset('images/bg-02.jpg') }});">
        <h2 class="ltext-105 cl0 txt-center">
            Shop
        </h2>
    </section>

    <!-- Product -->
    <div class="bg0 m-t-23 p-b-140">
        <div class="container">
            <div class="flex-w flex-sb-m p-b-52">
                <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                    <a href="{{ path('products') }}" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1">
                        All Products
                    </a>
                    {% for type in types %}
                        <a href="{{ path('products', {type: type.id}) }}" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">
                            {{ type.name }}
                        </a>
                    {% endfor %}
                </div>

                <div class="flex-w flex-c-m m-tb-10">
                    <div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
                        <i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
                        <i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                        Filter
                    </div>
                </div>

                <!-- Search product -->
                <div class="dis-none panel-search w-full p-t-10 p-b-15">
                    <div class="bor8 dis-flex p-l-15">
                        <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                            <i class="zmdi zmdi-search"></i>
                        </button>

                        <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product" placeholder="Search">
                    </div>
                </div>

                <!-- Filter -->
                <div class="dis-none panel-filter w-full p-t-10">
                    <form method="post" action="{{ path('products') }}">
                        <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
                            <div class="filter-col1 p-r-15 p-b-27">
                                <div class="mtext-102 cl2 p-b-15">
                                    Sort By
                                </div>

                                <ul>
                                    <li class="p-b-6">
                                        <a href="#" class="filter-link stext-106 trans-04">
                                            Default
                                        </a>
                                    </li>

                                    <li class="p-b-6">
                                        <a href="#" class="filter-link stext-106 trans-04">
                                            Popularity
                                        </a>
                                    </li>

                                    <li class="p-b-6">
                                        <a href="#" class="filter-link stext-106 trans-04">
                                            Average rating
                                        </a>
                                    </li>

                                    <li class="p-b-6">
                                        <a href="#" class="filter-link stext-106 trans-04 filter-link-active">
                                            Newness
                                        </a>
                                    </li>

                                    <li class="p-b-6">
                                        <a href="#" class="filter-link stext-106 trans-04">
                                            Price: Low to High
                                        </a>
                                    </li>

                                    <li class="p-b-6">
                                        <a href="#" class="filter-link stext-106 trans-04">
                                            Price: High to Low
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            {% if sizes|length %}
                                <div class="filter-col4 p-b-27">
                                    <div class="mtext-102 cl2 p-b-15">
                                        Sizes
                                    </div>
                                    <div class="flex-w p-t-4 m-r--5">
                                        <select name="size" class="flex-w p-t-4 m-r--5">
                                            <option class="p-b-6" value="All">
                                                All
                                            </option>
                                            {% for size in sizes %}
                                                <option class="p-b-6" value="{{ size.id }}">
                                                    {{ size.name }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            {% endif %}

                            {% if materials|length %}
                                <div class="filter-col2 p-r-15 p-b-27">
                                    <div class="mtext-102 cl2 p-b-15">
                                        Materials
                                    </div>
                                    <div class="flex-w p-t-4 m-r--5">
                                        <select name="material">
                                            <option class="p-b-6" value="All">
                                                All
                                            </option>
                                            {% for material in materials %}
                                                <option class="p-b-6" value="{{ material.id }}">
                                                    {{ material.name }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            {% endif %}

                            {% if colors|length %}
                                <div class="filter-col3 p-r-15 p-b-27">
                                    <div class="mtext-102 cl2 p-b-15">
                                        Colors
                                    </div>
                                    <div class="flex-w p-t-4 m-r--5">
                                        <select name="color">
                                            <option class="p-b-6" value="All">
                                                All
                                            </option>
                                            {% for color in colors %}
                                                <option class="p-b-6" value="{{ color.id }}">
                                                    {{ color.name }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            {% endif %}

                            {% if shapes|length %}
                                <div class="filter-col4 p-b-27">
                                    <div class="mtext-102 cl2 p-b-15">
                                        Shapes
                                    </div>
                                    <div class="flex-w p-t-4 m-r--5">
                                        <select name="shape" class="flex-w p-t-4 m-r--5">
                                            <option class="p-b-6" value="All">
                                                All
                                            </option>
                                            {% for shape in shapes %}
                                                <option class="p-b-6" value="{{ shape.id }}">
                                                    {{ shape.name }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            {% endif %}
                            <input type="submit" value="send">
                        </div>
                    </form>
                </div>
            </div>

            <div class="row isotope-grid">
                {% if products|length %}
                    {% for product in products %}
                        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                            <!-- Block2 -->
                            <div class="block2">
                                <div class="block2-pic hov-img0">
                                    {% for img in product.gallery.galleryHasMedias %}
                                        {% if loop.index == 1 %}
                                            <img src="{% path img.media, 'big' %}" alt="{{ product.title }}">
                                        {% endif %}
                                    {% endfor %}
                                    {% if product.state|length %}
                                        <span>{{ product.state|upper }}</span>
                                    {% endif %}
                                    <a href="{{ path('product-detail', {id: product.id}) }}" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                        Quick View
                                    </a>
                                </div>

                                <div class="block2-txt flex-w flex-t p-t-14">
                                    <div class="block2-txt-child1 flex-col-l ">
                                        <a href="{{ path('product-detail', {id: product.id}) }}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                            {{ product.title }}
                                        </a>

                                        <span class="stext-105 cl3">
                                            {{ product.price }} â‚¬
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>0 products found</p>
                {% endif %}
            </div>

            <!-- Load more -->
            <!--<div class="flex-c-m flex-w w-full p-t-45">
                <a href="#" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                    Load More
                </a>
            </div>-->
        </div>
    </div>
{% endblock %}